{
  "name": "im/telegram-bot",
  "type": "project",
  "description": "The IM Telegram Bot.",
  "require": {
    "php": "7.4",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-json": "*",
    "ext-mysqli": "*",
    "halaxa/json-machine": "^1.1"
  },
  "require-dev": {
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-mock": "^1.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Im\\": ["src"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Im\\Tests\\": "tests/src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
